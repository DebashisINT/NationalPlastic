<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/schdlrblue">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_generic_dialog_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Instruction for 2-Step Verification"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>


            <ImageView
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/iv_generic_dialog_cancel"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"
                android:layout_gravity="center|end"
                android:tint="@color/white"/>


        </FrameLayout>

        <ImageView
            android:id="@+id/tv_dialog_gmail_auth_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_470sdp"
            android:background="@drawable/img_gmail_auth_1"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_dialog_gmail_auth_prev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/default_text_color"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:foreground="@drawable/sq_ripple_back"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_dialog_gmail_auth_prev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Next(1/2)"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_dialog_gmail_auth_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/default_text_color"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:foreground="@drawable/sq_ripple_back"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_dialog_gmail_auth_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Next(1/2)"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>