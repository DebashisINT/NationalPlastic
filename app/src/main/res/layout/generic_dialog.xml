<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <com.breezenationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_generic_dialog_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>


            <ImageView
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/iv_generic_dialog_cancel"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"
                android:layout_gravity="center|end"
                android:tint="@color/red"/>


        </FrameLayout>

        <View
            android:id="@+id/dialog_adhaar_reg_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"/>

        <LinearLayout
            android:id="@+id/ll_dialog_msg_progress_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp">

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/pw_dialog_msg_progress"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <com.breezenationalplasticfsm.widgets.AppCustomTextView
            android:id="@+id/tv_generic_dialog_body"
            android:layout_width="match_parent"
            android:minHeight="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Do you want to go back ?"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:padding="@dimen/_3sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/gradient_bottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <com.breezenationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_generic_dialog_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_custom_border_blue_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Ok"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>