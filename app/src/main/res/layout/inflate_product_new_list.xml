<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cursor_six"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brand"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/_12sdp" />

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_watt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Measurement"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/_12sdp" />

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_cate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_product_list_log_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:id="@+id/ll_pro_nw_list_mrp_disc_root"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">


                    <com.breezefieldnationalplastic.widgets.AppCustomTextView
                        android:id="@+id/tv_mrp_product_new_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textColor="@color/black_50"
                        android:textSize="@dimen/_9sdp" />

                    <LinearLayout
                        android:id="@+id/ll_pro_nw_list_disct_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <!--5.0  AppV 4.0.6  ProductListAdapter Scroll handle mantis 25596-->


                            <TextView
                                android:id="@+id/edt_discount_product_new_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:gravity="center"/>

<!--                            <TextView-->
<!--                                android:id="@+id/edt_discount_product_new_list"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:background="@android:color/transparent"-->
<!--                                android:enabled="true"-->
<!--                                android:gravity="center"-->
<!--                                android:hint="Discount(%)"-->
<!--                                android:imeOptions="actionNext"-->
<!--                                android:inputType="numberDecimal"-->
<!--                                android:textColor="@color/black"-->
<!--                                android:textSize="@dimen/_9sdp" />-->

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:visibility="gone"
                            android:background="@color/black_50" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/ll_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone">

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="N.A."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pro_new_hint_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/transparent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="Qty"
                    android:textColor="@color/dark_blue" />


                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="Rate"
                    android:textColor="@color/dark_blue" />

                <!--                <com.google.android.material.textfield.TextInputLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">-->
                <!--                    <com.breezefieldnationalplastic.widgets.AppCustomEditText-->
                <!--                        android:id="@+id/xet_test"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="@dimen/_30sdp"-->
                <!--                        android:layout_weight="1"-->
                <!--                        android:hint="Rate"-->
                <!--                        android:background="@drawable/stork_bottom_custom"-->
                <!--                        android:enabled="true"-->
                <!--                        android:gravity="center"-->
                <!--                        android:inputType="numberDecimal"-->
                <!--                        android:textColor="@color/black"-->
                <!--                        android:imeOptions="actionNext"-->
                <!--                        app:theme="@style/EvoEditTextTheme"/>-->
                <!--                </com.google.android.material.textfield.TextInputLayout>-->

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_prod_new_list_tick1"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_prod_new_list_cross1"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qty_rt_product_new_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_qty_product_new_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:hint="Qty"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/black_50" />

                </LinearLayout>


                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_layout_product_new_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_rt_product_new_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:enabled="true"
                            android:gravity="center"
                            android:hint="Rate"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            app:theme="@style/EvoEditTextTheme" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/black_50" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/iv_rate_close"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="top"
                    android:src="@drawable/ic_close"
                    app:tint="@color/color_custom_red" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_prod_new_list_tick"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/check_icon"
                    android:scaleType="fitCenter" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_prod_new_list_cross"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/cross_icon"
                    android:scaleType="fitCenter" />


            </LinearLayout>

        </LinearLayout>

        <com.breezefieldnationalplastic.widgets.AppCustomTextView
            android:id="@+id/tv_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/add_to_cart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>


</androidx.cardview.widget.CardView>