<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/smoke_white"
    android:focusable="true"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F1EEEE"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:background="@color/default_text_color"
                        android:paddingRight="@dimen/_3sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Template Name"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <EditText
                            android:id="@+id/tv_template_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/white"
                            android:padding="@dimen/_3sdp"
                            android:hint="Enter Template Name"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"
                    android:visibility="gone"
                    android:background="@color/default_text_color"></LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F1EEEE"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:background="@color/default_text_color"
                        android:paddingRight="@dimen/_3sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Template Description"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/tv_frag_templ_copy1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@ToName"
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"/>

                        <ImageView
                            android:id="@+id/iv_frag_templ_copy1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/ic_content_copy"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_3sdp"/>

                        <TextView
                            android:id="@+id/tv_frag_templ_copy2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@FromName"
                            android:gravity="center"
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"/>

                        <ImageView
                            android:id="@+id/iv_frag_templ_copy2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/ic_content_copy"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_3sdp"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/tv_template_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="@dimen/_200sdp"
                        android:background="@drawable/curve_border_bg"
                        android:hint="Enter Template Description"
                        android:gravity="start|top"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_7sdp"
                        android:visibility="gone"
                        android:background="@color/default_text_color">

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/default_text_color"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:foreground="@drawable/sq_ripple_back"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/btn_template_submit"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>