<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@color/menu_back_color">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/img_menu_top"
                android:scaleType="centerInside"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOGGED IN AT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYNC \nLOG OUT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_logout2_adv"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/img_menu_top_adv"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_25sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_250sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_picture_menu_adv"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_menu_profile_image"
                        app:civ_border_color="#00A6C5E8"
                        app:civ_circle_background_color="#00A6C5E8"
                        app:civ_fill_color="@color/black"
                        app:civ_border_width="0dp"
                        app:civ_border_overlay="false" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_adv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center|top"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_250sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:background="@drawable/ic_logout2_adv"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:gravity="top"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_menu_adv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_20sdp"
            android:text="User Name"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_menu_adv_login_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Login Time"
                android:gravity="left|center|top"
                android:textColor="@color/white_70"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/tv_menu_adv_version"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="App Version"
                android:gravity="right|center|top"
                android:singleLine="true"
                android:textColor="@color/white_70"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:background="@drawable/search_icon_"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <EditText
                    android:id="@+id/et_search_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Search here"
                    android:textSize="@dimen/_12sdp"
                    android:singleLine="true"
                    android:background="@color/transparent"
                    android:layout_marginLeft="@dimen/_5sdp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_menu_adv_voice"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/attendance_report_header_blue"
                    android:layout_marginRight="@dimen/_4sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:background="@drawable/ic_mic"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</LinearLayout>