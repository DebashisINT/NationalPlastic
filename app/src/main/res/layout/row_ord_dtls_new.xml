<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:background="@drawable/shape_cursor_blue1"
            android:padding="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_row_ord_dtls_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Order ID"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"/>

                <TextView
                    android:id="@+id/tv_row_ord_dtls_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:gravity="center|start"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/chat_view"
                android:fadeScrollbars="false"
                android:scrollbarSize="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:scrollbarThumbHorizontal="@color/color_blue_light_dark">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="@dimen/_120sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_row_ord_dtls_share"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:backgroundTint="@color/color_blue_light_dark"
                        android:background="@drawable/ic_share"/>

                    <Space
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/iv_row_ord_dtls_view"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/ic_view_icon"
                        android:backgroundTint="@color/color_blue_light_dark" />

                    <Space
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/iv_row_ord_dtls_sync"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:backgroundTint="@color/maroon" />

                    <Space
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"/>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_row_ord_dtls_order_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Order item(s)"
                    android:gravity="center|start"
                    android:textSize="@dimen/_11sdp"
                    />

                <TextView
                    android:id="@+id/tv_row_ord_dtls_order_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Order Amount"
                    android:gravity="center|end"
                    android:textSize="@dimen/_11sdp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_row_ord_dtls_order_shop_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center|start"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Shop Name"/>

            <TextView
                android:id="@+id/tv_row_ord_dtls_order_shop_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:gravity="center|start"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/dark_gray"
                android:text="Shop Address"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>