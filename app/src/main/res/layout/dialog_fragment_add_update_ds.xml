<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:id="@+id/cv_ds_type_main"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_white_bg"
            android:orientation="vertical">

            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/dialog_header_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/color_silver"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Selected Type :    "
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/tv_dialog_frag_add_update_ds_selected_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Selected Type"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>



            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_ds_type_dropdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:drawableRight="@drawable/ic_down_icon"
                android:hint="@string/meeting_type"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/shape_cursor_two"/>


            <LinearLayout
                android:id="@+id/bottom_layout_LL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_70sdp">

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/cancel_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_button_custom"
                    android:textColor="@drawable/selector_text_clor_blue_white_new"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="#f8424e"
                    android:layout_marginRight="@dimen/_1sdp"/>

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/ok_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:backgroundTint="#57a518"
                    android:background="@drawable/shape_button_custom"
                    android:textColor="@drawable/selector_text_clor_blue_white_new"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/_1sdp"/>

            </LinearLayout>


        </LinearLayout>


        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/default_text_color"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>