<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4f1ff"
    android:focusable="true"
    android:clickable="true"
    tools:context=".PerformanceInsightPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_frag_search_mylearning_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:elevation="4dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#ddccff"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/custom_left_corner_dashborad"
                    android:backgroundTint="#b996ff"
                    >

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_vdo_lms"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:maxLines="2"
                            android:ellipsize="marquee"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:text="My Learning"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        >

                        <TextView
                            android:id="@+id/tv_frag_perf_my_learning_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal"
                            android:fontFamily="@font/poppins_medium"
                            android:text="50"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text="Contents"
                            android:visibility="visible"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>



                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/my_learning_arrow"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_frag_search_mylearning_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:elevation="4dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#ccdcff"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/custom_left_corner_dashborad"
                    android:backgroundTint="#93b5ff">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:src="@drawable/ic_performance_insights_adv"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:ellipsize="marquee"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:text="My Performance"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal"
                            android:fontFamily="@font/poppins_medium"
                            android:text="50"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text="Contents"
                            android:visibility="visible"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>



                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/my_performance_b_arrow"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_lms_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:elevation="4dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#ffd8cc"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/custom_left_corner_dashborad"
                    android:backgroundTint="#ffac93">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_ldrbrd"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:maxLines="2"
                            android:ellipsize="marquee"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Leaderboard"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal"
                            android:fontFamily="@font/poppins_medium"
                            android:text="50"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:text="Contents"
                            android:visibility="visible"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>



                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/leaderboard_y_arrow"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <include
        layout="@layout/include_bottom_tablayoutlms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

</LinearLayout>