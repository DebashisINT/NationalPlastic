<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:background="#dce4ef"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_3sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
           >

            <LinearLayout
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="@dimen/_250sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center"
                        android:background="@drawable/usericoncontact"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_frag_oppt_crm_name_root"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_2sdp"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/_250sdp"
                                app:cardElevation="@dimen/_3sdp">

                                <TextView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/usericoncontact"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_frag_oppt_crm_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLines="2"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/_9sdp"
                                android:text="Pijush Kumar Bhattacharya"
                                android:textColor="@color/black_51"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Space
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/ll_frag_oppt_crm_ph_root"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_oppt_cntct"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    app:cardBackgroundColor="@color/color_card_back_deep"
                                    app:cardCornerRadius="@dimen/_200sdp"
                                    app:cardElevation="@dimen/_3sdp">

                                    <ImageView
                                        android:id="@+id/iv_frag_oppt_crm_ph"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/animationcall"
                                        />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tv_frag_oppt_crm_ph"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:paddingLeft="@dimen/_9sdp"
                                    android:text="Contact No"
                                    android:textColor="@color/black_51"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_frag_oppt_crm_addr_root"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_oppt_address"
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/color_card_back_deep"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/iv_frag_oppt_crm_addr"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/animationaddress"
                                 />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_frag_oppt_crm_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_25sdp"
                            android:maxHeight="@dimen/_100sdp"
                            android:text="Address"
                            android:gravity="center|start"
                            android:textSize="@dimen/_13sdp"
                            android:singleLine="false"
                            android:paddingStart="@dimen/_8sdp"
                            android:textColor="@color/black_50"
                            android:layout_marginLeft="@dimen/_5sdp"/>

                    </LinearLayout>





                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <include
                android:visibility="gone"
                android:id="@+id/inflate_oprtnty_item_header_view"
                layout="@layout/inflate_oprtnty_item_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_frag_oppt_crm_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_no_data_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <include layout="@layout/empty_page_layout"/>
            </LinearLayout>

            <com.breezenationalplasticfsm.app.widgets.MovableFloatingActionButton
                android:id="@+id/fab_frag_oppt_crm_add_oppt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_add"
                app:fabSize="normal" />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/pw_frag_oppt_crm"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                wheel:matProg_barColor="@color/default_text_color"/>

            <TextView
                android:id="@+id/tv_frag_add_oppt_noData"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="No Opportunity Available"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13sdp"
                android:layout_height="wrap_content" />

        </FrameLayout>



    </LinearLayout>

</LinearLayout>