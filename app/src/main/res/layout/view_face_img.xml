<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp">

        <ImageView
            android:id="@+id/iv_face_img"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"/>

        <ImageView
            android:id="@+id/iv_face_reg_cancel"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="end"
            android:src="@drawable/ic_custom_cancel1" />


    </FrameLayout>


    <com.nationalplasticfsm.widgets.AppCustomTextView
        android:id="@+id/face_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name  : "
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sdp"
        android:background="@drawable/shape_cursor_two"/>

</LinearLayout>