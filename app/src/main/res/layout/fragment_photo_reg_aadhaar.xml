<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_7sdp">

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Name  : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp" />

                <com.breezefieldnationalplastic.widgets.AppCustomTextView
                    android:id="@+id/tv_frag_photo_reg_aadhaar_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name : "
                    android:gravity="center|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:paddingStart="@dimen/_4sdp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp" >

                <ImageView
                    android:id="@+id/iv_frag_photo_reg_aadhaar_pic"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_frag_photo_reg_aadhaar_camera_icon"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_icon"/>

            </FrameLayout>





            <Button
                android:id="@+id/btn_frag_photo_reg_aadhaar_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/selector_blue_botton_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"/>

        </LinearLayout>


        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/default_text_color"
            wheel:matProg_progressIndeterminate="true"
            android:layout_gravity="center" />

        <com.breezefieldnationalplastic.widgets.AppCustomTextView
            android:id="@+id/tv_internet_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_custom_green"
            android:padding="@dimen/_10sdp"
            android:text="@string/login_logout_reg_msg"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>