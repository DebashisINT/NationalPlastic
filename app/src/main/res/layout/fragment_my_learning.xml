<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F5FB"
    android:orientation="vertical"
    tools:context=".features.mylearning.MyLearningFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cv_lms_learner_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:background="@drawable/my_topics_bg"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:layout_marginBottom="@dimen/_4sdp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center|bottom|end"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Topics"
                                android:layout_gravity="center"
                                android:gravity="center|start|bottom"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_2sdp"/>

                        </LinearLayout>

                        <!--<Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="My Topics"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:src="@drawable/open_book_lms_"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_frag_search_knowledge_hub_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/all_topic_bg"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_5sdp">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_content_knowledge"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:gravity="center|end|bottom"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Topics"
                            android:gravity="center|start|bottom"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_1sdp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="All Topics"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/set_of_books_lms"
                    android:elevation="@dimen/_50sdp"/>



            </FrameLayout>

            <Space
                android:layout_width="@dimen/_6sdp"
                android:layout_height="match_parent" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_lms_dash_performance_ins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/performance_bg"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Performance\nInsights"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_20sdp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/performance_insight_arrow"
                        android:layout_gravity="end|bottom"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/performance_insights"/>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Played Content"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_last_vid_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="0dp"
            app:cardBackgroundColor="#55e3f0"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_frag_my_learning_last_topic_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_image"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_my_learning_last_content_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:ellipsize="marquee"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:textStyle="bold"
                            android:text="Content Name"
                            android:gravity="center|start"/>

                        <!--<Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>-->

                        <TextView
                            android:id="@+id/tv_frag_my_learning_last_content_desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:text="Content Description"
                            android:gravity="center|start|top"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_play_lms"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/transparent">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="@dimen/_3sdp"
                        app:cardBackgroundColor="#9714E2"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:src="@drawable/icon_book_lms"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Topics"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    app:cardCornerRadius="@dimen/_250sdp"
                                    app:cardBackgroundColor="@color/white">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/folder_icon"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/_5sdp"/>

                                </androidx.cardview.widget.CardView>

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="1000 Contents"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:visibility="visible"
                                    android:scaleType="centerCrop"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/final_img_left"
                                    android:layout_gravity="bottom" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.8"
                                    app:cardBackgroundColor="#66FFFFFF"
                                    android:background="@drawable/custom_left_corner"
                                    android:layout_gravity="bottom"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:scaleType="centerCrop"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/right_arrow_lms_"
                                        android:layout_gravity="bottom"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:defaultFocusHighlightEnabled="true"
                        android:elevation="@dimen/_10sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#DB7B0E"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/ll_frag_search_mylearning_root"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:src="@drawable/icon_vdo_lms"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Learning"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginLeft="@dimen/_5sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    app:cardCornerRadius="@dimen/_250sdp"
                                    app:cardBackgroundColor="@color/white">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/folder_icon"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/_5sdp"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tv_content_learning"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1000 Contents"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"/>

                            <Space
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                app:cardBackgroundColor="#66FFFFFF"
                                android:background="@drawable/custom_left_corner"
                                android:layout_gravity="bottom"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:scaleType="centerCrop"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/right_arrow_lms_"
                                    android:layout_gravity="bottom"/>

                            </LinearLayout>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_8sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:defaultFocusHighlightEnabled="true"
                        android:elevation="@dimen/_10sdp"
                        app:cardBackgroundColor="#14CC86"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            >

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:src="@drawable/icon_knw_hb_lms"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="All Topics"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginLeft="@dimen/_5sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    app:cardCornerRadius="@dimen/_250sdp"
                                    app:cardBackgroundColor="@color/white">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/folder_icon"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/_5sdp"/>

                                </androidx.cardview.widget.CardView>

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1000 Contents"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"/>

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="#66FFFFFF"
                                    android:background="@drawable/custom_left_corner"
                                    android:layout_gravity="bottom"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/right_arrow_lms_"
                                        android:layout_gravity="bottom"/>

                                </LinearLayout>



                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learning Insights"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_frag_search_mylearning_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:defaultFocusHighlightEnabled="true"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="#F23BB2"
                    android:layout_margin="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:src="@drawable/icon_prfrmnc_lms"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_gravity="center" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Performance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_20sdp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_lms_leaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:defaultFocusHighlightEnabled="true"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="#ACC010"
                    android:layout_margin="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

