<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:padding="@dimen/_3sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                app:cardCornerRadius="@dimen/_250sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_row_shop_list_ma_name"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/color_card_back_deep"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_row_shop_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="bottom|start"
                android:text="Shop Name"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/_2sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_30sdp">

            <ImageView
                android:id="@+id/ll_shop_list_ma_direction1"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_23sdp"
                android:background="@drawable/ic_registered_shop_direction_select"
                android:backgroundTint="@color/green"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_row_shop_list_ma_addr1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:text="Address"
                android:gravity="center|start"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/date_bg_selected_color"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_3sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/card_custom_back1"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/icon_shop_4"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_2sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/color_card_back_deep">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/icon_shop_black"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tv_row_shop_list_shop_type1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Type"
                                android:gravity="center|start"
                                android:singleLine="true"
                                android:textColor="@color/date_bg_selected_color"
                                android:textSize="@dimen/_11sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Party Type"
                                android:gravity="center|start"
                                android:singleLine="true"
                                android:textColor="@color/gray_50_dark"
                                android:textSize="@dimen/_10sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:id="@+id/ll_row_shop_dtls_ma_contact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/color_card_back_deep">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/icon_call_black"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tv_row_shop_phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Contact"
                                android:gravity="center|start"
                                android:singleLine="true"
                                android:textColor="@color/date_bg_selected_color"
                                android:textSize="@dimen/_11sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Contact"
                                android:gravity="center|start"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:textColor="@color/gray_50_dark"
                                android:textSize="@dimen/_10sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cv_row_shop_list_ma_catagory_retailer_root1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/color_card_back_deep">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/icon_owner_black"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_row_shop_list_ma_shop_catagory_retailer1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Owner Name"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/date_bg_selected_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="owner name"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/gray_50_dark"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>



            </LinearLayout>

            <Space
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/color_card_back_deep">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/icon_cal_black"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_row_shop_list_ma_shop_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Count"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/date_bg_selected_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/tv_row_shop_list_tv_text_dynamic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="age since last visit"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/gray_50_dark"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>



</androidx.cardview.widget.CardView>