<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Vikas Kumar Khuranna"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:fadeScrollbars="false"
                    android:fillViewport="true"
                    android:scrollbarSize="@dimen/_2sdp"
                    android:scrollbarThumbHorizontal="@color/color_blue_light_dark"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/rl_icons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_beat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_coll"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_assigned_dd_icon"
                            app:tint="@color/green" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_zero_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_coll"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_order_icon"
                            app:tint="@color/blue" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_coll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_leave"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_collection_blue"
                            app:tint="@color/violet" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_leave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_job"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_applyleave"
                            app:tint="@color/default_gray" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_pjp_icon"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_activity_blue" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_pjp_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_map_icon"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_pjp" />

                        <ImageView
                            android:id="@+id/iv_map_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_call_icon"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_green_location" />

                        <ImageView
                            android:id="@+id/iv_call_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:contentDescription="@null"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_registered_shop_call_select" />
                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/ll_state_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_state_member_list"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="State : "
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_state_member_list_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_branch_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_branch_member_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Branch : "
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_branch_member_list_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_design_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_des_member_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_11sdp"
                            android:text="Designation : " />

                        <TextView
                            android:id="@+id/tv_des_member_list_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:text="" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_emp_code_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_empcode_member_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black_50"
                            android:textSize="@dimen/_11sdp"
                            android:text="Emp Code : " />

                        <TextView
                            android:id="@+id/tv_empcode_member_list_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:text="" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@android:color/black"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_10sdp">

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/tv_team_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/click_for_team_details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:id="@+id/tv_shop_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignBaseline="@+id/tv_team_details"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:text="@string/click_for_shop_details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:padding="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
                <com.nationalplasticfsm.widgets.AppCustomTextView
                    android:padding="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:id="@+id/tv_team_details_all_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click for All Party"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>