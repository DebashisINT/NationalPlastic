<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_1sdp"
        android:paddingBottom="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                app:cardCornerRadius="@dimen/_250sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:foreground="@drawable/round_ripple_back">

                <TextView
                    android:id="@+id/tv_row_shop_list_ma_name_pref1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/color_card_back_deep"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_row_shop_list_ma_name1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="bottom|start"
                android:text="Shop Name"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:paddingBottom="@dimen/_2sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_30sdp">

            <ImageView
                android:id="@+id/ll_shop_list_ma_direction1"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_23sdp"
                android:background="@drawable/ic_registered_shop_direction_select"
                android:backgroundTint="@color/green"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_row_shop_list_ma_addr1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:text="Address"
                android:gravity="center|start"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/date_bg_selected_color"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_3sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/card_custom_back1"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        app:cardElevation="@dimen/_3sdp"
                        android:foreground="@drawable/round_ripple_back"
                        app:cardBackgroundColor="@color/color_card_back_deep">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/icon_shop_black"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tv_row_shop_list_ma_shop_type1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Type"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:textColor="@color/date_bg_selected_color"
                            android:textSize="@dimen/_11sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Party Type"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:textColor="@color/gray_50"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/ll_row_shop_dtls_ma_contact1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        app:cardElevation="@dimen/_3sdp"
                        android:foreground="@drawable/round_ripple_back"
                        app:cardBackgroundColor="@color/color_card_back_deep">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_call_black" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tv_row_shop_list_ma_shop_contact1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Contact"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:textColor="@color/date_bg_selected_color"
                            android:textSize="@dimen/_11sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Contact"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:textColor="@color/gray_50"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_row_shop_list_ma_beat_root1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:foreground="@drawable/round_ripple_back"
                    app:cardBackgroundColor="@color/color_card_back_deep">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/icon_loc_direction"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_row_shop_list_ma_shop_beat1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Beat"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/date_bg_selected_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Beat"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/gray_50"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_row_shop_list_ma_party_status_root1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:foreground="@drawable/round_ripple_back"
                    app:cardBackgroundColor="@color/color_card_back_deep">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_party_status"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_row_shop_list_ma_shop_party_status1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Status"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/date_bg_selected_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Status"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/gray_50"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_row_shop_list_ma_catagory_retailer_root1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:foreground="@drawable/round_ripple_back"
                    app:cardBackgroundColor="@color/color_card_back_deep">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/icon_catagory_black"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_row_shop_list_ma_shop_catagory_retailer1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Category"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/date_bg_selected_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Category"
                        android:gravity="center|start"
                        android:singleLine="true"
                        android:textColor="@color/gray_50"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_row_shop_list_ma_assist1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/iv_row_shop_list_ma_pointer"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/icon_pointer_gif"
                    android:rotation="-90"
                    android:backgroundTint="@color/white"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:text="Get Assistance"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/deep_maroon"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>