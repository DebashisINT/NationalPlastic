<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_1sdp"
    android:orientation="horizontal"
    android:background="#dde7f1"
    android:id="@+id/main_const"
    tools:context=".features.leaderboard.LeaderBoardFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--top sticky bar-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topStick_bar"
            android:background="#dde7f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/constraintLayoutBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backwhite_round_corner_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/bt_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:text=""
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/bt_own"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/_19sdp"
                    android:paddingEnd="@dimen/_19sdp"
                    app:layout_constraintStart_toEndOf="@+id/bt_overall"
                    app:layout_constraintTop_toTopOf="parent"></TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/iv_hand_ani"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:rotation="-90"
                android:visibility="gone"
                android:backgroundTint="@color/color_deep_blue_leader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/ic_dashboard_filter_floating_icon"
                android:tint="#160f53"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_filter_red"
                android:tint="@color/color_star_leader"
                app:layout_constraintBottom_toBottomOf="@+id/iv_filter"
                app:layout_constraintEnd_toEndOf="@+id/iv_filter"
                app:layout_constraintStart_toStartOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="@+id/iv_filter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--end-->
        <!--Overall section-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_half"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topStick_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overall_firstTo_thirdrank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/leaderbackground"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_firstP1"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/firstpositiondesign"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/iv_firstP"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/user_blank"
                    app:civ_border_color="@color/yellow_dot"
                    app:civ_border_width="@dimen/_3sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_49sdp"
                    android:src="@drawable/first_icon"
                    app:layout_constraintEnd_toEndOf="@+id/iv_firstP"
                    app:layout_constraintStart_toStartOf="@+id/iv_firstP"
                    app:layout_constraintTop_toTopOf="@+id/iv_firstP" />

                <TextView
                    android:id="@+id/tv_firstPname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_firstP"
                    app:layout_constraintStart_toStartOf="@+id/iv_firstP"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintStart_toStartOf="@+id/iv_firstP"
                    app:layout_constraintTop_toBottomOf="@+id/tv_firstPname" />

                <TextView
                    android:id="@+id/tv_firstPscore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:text=""
                    android:textColor="@color/color_star_leader"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="@+id/iv_firstP"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_firstPname" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_secondP"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginTop="@dimen/_42sdp"
                    android:src="@drawable/user_blank"
                    app:civ_border_color="#8c93a4"
                    app:civ_border_width="@dimen/_3sdp"
                    app:layout_constraintEnd_toStartOf="@+id/iv_firstP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:src="@drawable/second_icon"
                    app:layout_constraintEnd_toEndOf="@+id/iv_secondP"
                    app:layout_constraintStart_toStartOf="@+id/iv_secondP"
                    app:layout_constraintTop_toTopOf="@+id/iv_secondP" />

                <TextView
                    android:id="@+id/tv_secondPname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_secondP"
                    app:layout_constraintStart_toStartOf="@+id/iv_secondP"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintStart_toStartOf="@+id/iv_secondP"
                    app:layout_constraintTop_toBottomOf="@+id/tv_secondPname" />

                <TextView
                    android:id="@+id/tv_secondPscore"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="NA"
                    android:textColor="@color/color_star_leader"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                    app:layout_constraintEnd_toEndOf="@+id/iv_secondP"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/tv_secondPname"
                    app:layout_constraintVertical_bias="1.0" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_thirdP"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:src="@drawable/user_blank"
                    app:civ_border_color="#8d6250"
                    app:civ_border_width="@dimen/_3sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_firstP"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_42sdp"
                    android:src="@drawable/third_icon"
                    app:layout_constraintEnd_toEndOf="@+id/iv_thirdP"
                    app:layout_constraintStart_toStartOf="@+id/iv_thirdP"
                    app:layout_constraintTop_toTopOf="@+id/iv_thirdP" />

                <TextView
                    android:id="@+id/tv_thirdPname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_thirdP"
                    app:layout_constraintStart_toStartOf="@+id/iv_thirdP"
                    app:layout_constraintTop_toBottomOf="@+id/imageView10" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintStart_toStartOf="@+id/iv_thirdP"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thirdPname" />

                <TextView
                    android:id="@+id/tv_thirdPscore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:text=""
                    android:textColor="@color/color_star_leader"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                    app:layout_constraintEnd_toEndOf="@+id/iv_thirdP"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="@+id/imageView11" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/own_part_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_245sdp"
                android:background="@drawable/leaderbackground"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/second_half">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ownimg"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user_blank"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_ownrank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:text="#22"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ownimg" />


                <TextView
                    android:id="@+id/tv_ownname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_42sdp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ownimg" />

                <ImageView
                    android:id="@+id/iv_ownimg2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ownname" />

                <TextView
                    android:id="@+id/tv_ownscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/color_star_leader"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_ownimg2"
                    app:layout_constraintStart_toEndOf="@+id/iv_ownimg2"
                    app:layout_constraintTop_toTopOf="@+id/iv_ownimg2" />


                <ImageView

                    android:id="@+id/iv_OwnTag"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/iv_ownimg"
                    app:layout_constraintStart_toStartOf="@+id/iv_ownimg"
                    app:layout_constraintTop_toTopOf="@+id/iv_ownimg" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--start own Section-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView_own"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/own_part_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/_3sdp">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Here is the break up of your earned rating"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewAtten"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg_lead"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <ImageView
                            android:id="@+id/iv_atten"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/attendance"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAtten"
                            app:layout_constraintStart_toStartOf="@+id/viewAtten"
                            app:layout_constraintTop_toTopOf="@+id/viewAtten" />

                        <TextView
                            android:id="@+id/tv_atten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Attendance"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_atten"
                            app:layout_constraintStart_toEndOf="@+id/iv_atten"
                            app:layout_constraintTop_toTopOf="@+id/iv_atten" />

                        <ImageView
                            android:id="@+id/iv_starAtten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAtten"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/viewAtten"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starAtten"
                            app:layout_constraintEnd_toEndOf="@+id/viewAtten"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/iv_starAtten"
                            app:layout_constraintTop_toTopOf="@+id/iv_starAtten" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewVisit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg_lead"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewAtten">

                        <ImageView
                            android:id="@+id/iv_visit"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/visit"
                            app:layout_constraintBottom_toBottomOf="@+id/viewVisit"
                            app:layout_constraintStart_toStartOf="@+id/viewVisit"
                            app:layout_constraintTop_toTopOf="@+id/viewVisit" />

                        <TextView
                            android:id="@+id/tv_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="New Visit"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_visit"
                            app:layout_constraintStart_toEndOf="@+id/iv_visit"
                            app:layout_constraintTop_toTopOf="@+id/iv_visit" />

                        <ImageView
                            android:id="@+id/iv_starVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewVisit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/viewVisit"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreAV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starVisit"
                            app:layout_constraintEnd_toEndOf="@+id/viewVisit"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/iv_starVisit"
                            app:layout_constraintTop_toTopOf="@+id/iv_starVisit" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/viewcollection"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/curve_border_bg_lead"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewVisit">

                        <ImageView
                            android:id="@+id/iv_collection"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/collection"
                            app:layout_constraintBottom_toBottomOf="@+id/viewcollection"
                            app:layout_constraintStart_toStartOf="@+id/viewcollection"
                            app:layout_constraintTop_toTopOf="@+id/viewcollection" />

                        <TextView
                            android:id="@+id/tv_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="Revisit"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_collection"
                            app:layout_constraintStart_toEndOf="@+id/iv_collection"
                            app:layout_constraintTop_toTopOf="@+id/iv_collection" />

                        <ImageView
                            android:id="@+id/iv_starcollection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:src="@drawable/baseline_star_24"
                            app:layout_constraintBottom_toBottomOf="@+id/viewcollection"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/viewcollection"
                            app:layout_constraintVertical_bias="0.523" />

                        <TextView
                            android:id="@+id/tv_totalscoreRev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_starcollection"
                            app:layout_constraintEnd_toEndOf="@+id/viewcollection"
