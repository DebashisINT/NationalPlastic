<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:minHeight="@dimen/_45sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="#E6E5E5"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_gravity="center"
            app:cardElevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/frag_distribute_wise_order_list_from_date_range"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:text="@string/from_date"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_11sdp" />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="@dimen/_15sdp"
            android:layout_height="match_parent" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardBackgroundColor="#E6E5E5"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/frag_distribute_wise_order_list_to_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:text="@string/to_date"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_11sdp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/assign_to_rl"
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/assign_to_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_assigned_pp_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/assign_to_IV">

            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/assign_to_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_pp_asterisk_mark"
                android:hint="Select PP"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp" />

            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_pp_asterisk_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/iv_pp_dropdown"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/mandatory_mark"
                android:visibility="gone"
                android:textColor="@color/red"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/iv_pp_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_gray_down_arrow_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/assign_to_tv"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_assign_to_dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_assign_to_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:contentDescription="@null"
            android:src="@drawable/ic_assigned_dd_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_assign_to_dd">

            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_assign_to_dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_dd_asterisk_mark"
                android:hint="Select DD"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_dd_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_gray_down_arrow_icon" />

            <com.nationalplasticfsm.widgets.AppCustomTextView
                android:id="@+id/tv_dd_asterisk_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/iv_dd_dropdown"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/mandatory_mark"
                android:textColor="@color/red"
                android:visibility="gone"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/tv_assign_to_dd"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </LinearLayout>

    <com.nationalplasticfsm.widgets.AppCustomTextView
        android:id="@+id/frag_distributor_wise_order_generated_pdf_TV"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_gravity="center"
        android:background="@drawable/shape_cursor_button"
        android:textColor="@color/login_txt_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="Generate PDF"
        android:drawableRight="@drawable/ic_share"
        app:drawableTint="@color/login_txt_color"
        android:textSize="@dimen/_13sdp"
        android:visibility="visible" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        wheel:matProg_barColor="@color/colorPrimaryDark"
        wheel:matProg_progressIndeterminate="true" />



</LinearLayout>