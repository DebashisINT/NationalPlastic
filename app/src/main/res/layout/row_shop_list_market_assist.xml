<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/transparent">

                <TextView
                    android:id="@+id/tv_row_shop_list_ma_name_pref"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="X"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:background="@color/color_custom_red"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_row_shop_list_ma_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Shop Name"

                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="1dp"
            android:fadeScrollbars="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_105sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="#009f74">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:padding="@dimen/_3sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center|start"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_shop_4"
                                android:padding="@dimen/_5sdp"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Type"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_7sdp" />

                            <TextView
                                android:id="@+id/tv_row_shop_list_ma_shop_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Type"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_105sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="#880854">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:padding="@dimen/_3sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_row_shop_dtls_ma_contact"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center|start"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_call_green"
                                android:padding="@dimen/_5sdp"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contact No"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_7sdp" />

                            <TextView
                                android:id="@+id/tv_row_shop_list_ma_shop_contact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Contact No"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_row_shop_list_ma_beat_root"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_105sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="#006c74"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:padding="@dimen/_3sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center|start"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_map_color"
                                android:padding="@dimen/_5sdp"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Beat"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_7sdp" />

                            <TextView
                                android:id="@+id/tv_row_shop_list_ma_shop_beat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Beat"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_row_shop_list_ma_party_status_root"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_105sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="#5a7a0e"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:padding="@dimen/_3sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center|start"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_status" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Status"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_7sdp" />

                            <TextView
                                android:id="@+id/tv_row_shop_list_ma_shop_party_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Status"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_row_shop_list_ma_catagory_retailer_root"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_105sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="#7c2a0b"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:padding="@dimen/_3sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center|start"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_category"
                                android:padding="@dimen/_5sdp"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Category"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_7sdp" />

                            <TextView
                                android:id="@+id/tv_row_shop_list_ma_shop_catagory_retailer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Category"
                                android:gravity="center|start"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_9sdp" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_shop_list_ma_direction"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="#D88911">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_map_color_pointer"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_row_shop_list_ma_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/_45sdp"
                android:minHeight="@dimen/_30sdp"
                android:layout_weight="1"
                android:text="Address"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/dark_gray"
                android:paddingStart="@dimen/_5sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_gravity="center"
                app:cardElevation="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                app:cardBackgroundColor="#172DAA">

                <LinearLayout
                    android:id="@+id/ll_row_shop_list_ma_assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/icon_touch_1"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Get Assistance"
                        android:gravity="center"
                        android:textSize="@dimen/_7sdp"
                        android:textColor="@color/white"
                        android:paddingStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>