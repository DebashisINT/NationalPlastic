<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingRight="@dimen/_2sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_10sdp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_no" />

    <com.breezefieldnationalplastic.widgets.AppCustomTextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close_icon"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:text="@string/use_location"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <com.breezefieldnationalplastic.widgets.AppCustomTextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/loc_msg_new_new"
        android:textColor="@color/black_50"
        android:textSize="@dimen/_11sdp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_body"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/map" />

    <com.breezefieldnationalplastic.widgets.AppCustomTextView
        android:id="@+id/tv_ok"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/i_agree"
        android:background="@drawable/blue_action_bar_background"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

</RelativeLayout>
