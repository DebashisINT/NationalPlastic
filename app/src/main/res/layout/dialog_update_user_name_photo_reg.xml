<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_update_usr_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_35sdp"
            android:text="Name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/color_silver"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">


            <EditText
                android:id="@+id/et_dialog_update_usr_name_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/curve_border_bg"
                android:textColor="@color/black"
                android:hint="Enter First Name"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp" />

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_shop_asterisk_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/mandatory_mark"
                android:textColor="@color/red"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="end"/>

        </FrameLayout>


        <EditText
            android:id="@+id/et_dialog_update_usr_name_middle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/curve_border_bg"
            android:textColor="@color/black"
            android:hint="Enter Middle Name"
            android:paddingStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/et_dialog_update_usr_name_last"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/curve_border_bg"
            android:textColor="@color/black"
            android:hint="Enter Last Name"
            android:paddingStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/bottom_layout_LL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp">

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/cancel_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_custom"
                android:textColor="@drawable/selector_text_clor_blue_white_new"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="#f8424e"
                android:layout_marginRight="@dimen/_1sdp"/>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/ok_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Update"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="#57a518"
                android:background="@drawable/shape_button_custom"
                android:textColor="@drawable/selector_text_clor_blue_white_new"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="@dimen/_1sdp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>