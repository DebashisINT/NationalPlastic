<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rounded_corner_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_header"
            android:layout_marginStart="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:tint="@color/red">

        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/part_one_filter"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Activities based on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

                <LinearLayout
                    android:background="@drawable/back_round_corner_7"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/ll_ratingbased"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:id="@+id/tv_ratingbased"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:hint="All"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/iv_frag_cont_add_type"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/transparent">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_down_arrow"
                            android:backgroundTint="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/back_round_corner_7"
                    android:id="@+id/ll_durationFilter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_branch"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="MTD"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/iv_frag_cont_add_status"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/transparent">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_down_arrow"
                            android:backgroundTint="@color/black"/>
                    </LinearLayout>



                </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/part_two_filter"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="Head Branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

            <LinearLayout
                android:id="@+id/ll_branchFilter"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/back_round_corner_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/tv_headbranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="Head Branch"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/iv_duration"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_down_arrow"
                        android:backgroundTint="@color/black"/>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

<!--
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/back_round_corner_7"
                android:backgroundTint="@color/approved_green"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:id="@+id/tv_filterDone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Done"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

            </LinearLayout>
-->

            <LinearLayout

                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/back_round_corner_7"
                android:id="@+id/ll_subBranch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:id="@+id/tv_subBranch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="Branch"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/iv_subBranch"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_down_arrow"
                        android:backgroundTint="@color/black"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/part_three_filter"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/back_round_corner_7"
                android:id="@+id/ll_durationFilter2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_durationown"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="MTD"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/iv_durationown"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_down_arrow"
                        android:backgroundTint="@color/black"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="invisible"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <!--
                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/back_round_corner_7"
                            android:backgroundTint="@color/approved_green"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:gravity="center_horizontal"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:id="@+id/tv_filterDone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Done"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11sdp"/>
                            </LinearLayout>

                        </LinearLayout>
            -->

            <LinearLayout
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/back_round_corner_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_filterDoneOwn"
                        android:background="@drawable/back_round_corner_7"
                        android:backgroundTint="@color/approved_green"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Show"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_down_arrow"
                        android:backgroundTint="@color/black"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
                 android:visibility="gone"
                android:id="@+id/tv_filterDone"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/back_round_corner_7"
                android:backgroundTint="@color/approved_green"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Done"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"/>
                </LinearLayout>

            </LinearLayout>

</LinearLayout>