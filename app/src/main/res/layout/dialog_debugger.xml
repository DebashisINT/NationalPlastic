<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/transparent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_white_bg">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/dialog_yes_no_headerTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_head_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You have enabled USB debugging in your phone.
Please disable USB debugging to start the FSM application."
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_3sdp"
                android:textStyle="bold"
                android:paddingEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"/>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_head_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:text="Stop to disable USB debugging on an Android device:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"/>

            <com.breezefieldnationalplastic.widgets.AppCustomTextView
                android:id="@+id/tv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text=" 1. Open the Settings app on your Android device.\n
2. Scroll down and tap on 'Developer Options'.\n
3. Scroll down and find to 'USB Debugging' and toggle it off to disable it.\n
4. If you are prompted with a warning message, read it carefully and tap on 'OK' to disable USB debugging."
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" />


        <com.breezefieldnationalplastic.widgets.AppCustomTextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="Ok"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#57a518"
            android:background="@drawable/selector_order_history_bg"
            android:textColor="@drawable/selector_text_clor_blue_white"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/_5sdp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>