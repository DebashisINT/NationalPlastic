<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_silver_light"
    xmlns:wheel="http://schemas.android.com/tools"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            android:gravity="center"
            android:alpha="0.8">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_frag_ord_prod_mic"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_voice_icon"
                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="vertical"
                android:background="@color/transparent"
                app:cardCornerRadius="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <com.breezefieldnationalplastic.widgets.AppCustomEditText
                    android:id="@+id/et_frag_ord_prod_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="Search"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_10sdp" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_frag_ord_prod_search"
                    android:layout_width="@dimen/_33sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_search_white"
                    app:tint="@color/color_custom_green"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>



            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_frag_ord_prod_filter"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_filter_red"
                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ord_pro_list_frag_filter_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/popup_window_bar_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll_frag_ord_pro_list_gr_sel_root"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_frag_ord_pro_list_gr_sel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Search by Group"
                        android:textColor="@color/bill_blue"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center|start" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow1"
                        android:rotation="180" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/popup_window_bar_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll_frag_ord_pro_list_catag_sel_root"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_frag_ord_pro_list_catag_sel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Search by Category"
                        android:textColor="@color/bill_blue"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center|start" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow1"
                        android:rotation="180" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/popup_window_bar_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/ll_frag_ord_pro_list_measure_sel_root"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_frag_ord_pro_list_measure_sel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Search by Measurement"
                        android:textColor="@color/bill_blue"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center|start" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow1"
                        android:rotation="180" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ord_pro_list_frag_product_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="@dimen/_5sdp"
                android:nestedScrollingEnabled="false" />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/pw_frag_ord_pro_list"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                wheel:matProg_barColor="@color/default_text_color"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_ord_prod_list_frag_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40sdp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_ord_prod_list_frag_amt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="â‚¹ Amount"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:background="#15539e"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#0ca97e"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/transparent">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/ic_cart_red"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="View Cart"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardBackgroundColor="#152a9d"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_ord_prod_list_frag_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_30sdp"
                        android:minHeight="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>



                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_simple"
                    android:rotation="-180"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>